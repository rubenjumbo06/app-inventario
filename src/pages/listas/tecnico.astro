---
import Layout from "../../layouts/p_layout.astro";
import Sidebar from "../../components/Sidebar.tsx";
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualización de Tablas</title>
    <style>

        h1 {
            color: white;
            text-align: center;
            text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            font-size: 30px;
        }

        table {
            width: 60%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #27667B;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        button {
            padding: 8px 12px;
            margin: 5px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            
        }

        .editBtn {
            background-color: #ffc107;
            color: black;
            transition: background-color 0.3s ease;
        }

        .editBtn:hover{
            background-color: #FBA518;
            color: black;
            transition: background-color 0.3s ease;
        }

        .deleteBtn {
            background-color: #dc3545;
            color: white;
        }

        #addBtn {
            background-color: #28a745;
            color: white;
            padding: 10px 15px;
            transition: background-color 0.3s ease;
        }

        #addBtn:hover {
            background-color: #218838; /* Un tono más oscuro de verde */
        }

        .centered-button {
            text-align: center;
            margin-top: 20px;
        }

        .nav-buttons {
            display: flex;
            justify-content: center;
            gap: 10px; /* Espacio entre los botones */
            margin-top: 20px;
        }

        .nav-buttons a button {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            font-size: 14px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<Layout>

    <strong><h1>Visualización de Tabla Técnico</h1></strong>

    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
        <tr>
            <td>1</td>
            <td>Producto A</td>
            <td>
                <button class="editBtn">Editar</button>
                <button class="deleteBtn">Eliminar</button>
            </td>
        </tr>
        <tr>
            <td>2</td>
            <td>Producto B</td>
            <td>
                <button class="editBtn">Editar</button>
                <button class="deleteBtn">Eliminar</button>
            </td>
        </tr>
    </table>

    <div class="centered-button">
        <button id="addBtn">Agregar Nuevo</button>
    </div>

    <Sidebar client:load />

</Layout>
</html>